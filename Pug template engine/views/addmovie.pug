doctype html
html
  head
    title Add movie
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
  body
  table.table.table-striped
    h1 New movie
    form(action='/addmovie', method='POST')
      div
        input(type="text", name="title" placeholder="Enter title").form-control.text
      div
        input(type="text", name="director" placeholder="Enter director").form-control.text
      div
        input(type="number", name="year"  placeholder="Enter year").form-control.number
      div
      
        input(type="submit", value="Add").btn.btn-primary